label s004:

    scene bg19a
    with gs_cud

    play music "bgm/M02.ogg" fadein 1.0

    show amane tam02sa at c
    with dissolve

    window show
    voice "AMANE_0103"
    amane "「到——达——」"

    show kaori tka01sa at l
    show amane tam02sa at r
    with dissolve

    voice "KAORI_0110"
    kaori "「是是，别一大早就大呼小叫。会打扰大家的吧。」"

